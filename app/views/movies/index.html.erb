<div class='row mt-3 border'>
  <div class='col-lg-12'>
    <h2 class='mt-3'>All Movies</h2>
    <div class='row'>
      <% @movies.each do |movie| %>
        <%= render partial: 'home/movie_card', locals: { movie: movie } %>
      <% end %>
    </div>
  </div>
</div>
<div class='col-lg-12 pt-4'>
  <%= paginate @movies, window: 2 %>
</div>
