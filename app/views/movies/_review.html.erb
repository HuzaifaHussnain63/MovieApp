<div class='col-lg-12'>
  <div class="card m-3">
    <div class="card-header">
      <%= review.user.name %>

      <% review.rating.times do |star| %>
        <span class="fa fa-star golden-star"></span>
      <% end %>

      <% (5 - review.rating).times do |star| %>
        <span class="fa fa-star"></span>
      <% end %>
      <% if user_signed_in? && current_user.id == review.user.id %>
        <%= link_to fa_icon('edit  2x', class: 'pull-right'), '#',data: {toggle: 'modal', target: '#editReview'} %>
      <% end %>
      <% if allow_review_deletion?(review) %>
        <%= link_to fa_icon('trash 2x', class: 'pull-right'), movie_review_path(review.movie_id, review), method: :delete %>
      <% end %>
    </div>
    <% if review.comment != '' %>
      <div class="card-body">
        <%= review.comment %>
      </div>
    <% end %>
  </div>
</div>

<!-- Bootstrap modal to edit a review posted by the user-->
<div class="modal fade" id="editReview" tabindex="-1" role="dialog" aria-labelledby="editReviewlabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Edit Review</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class='modal-body'>
        <%= render partial: 'reviews/review_form', locals: { request_method: :patch, button_text: 'Update Review', remote: false, object: review, path: movie_review_path(review.movie_id, review.id) } %>
      </div>
    </div>
  </div>
</div>
