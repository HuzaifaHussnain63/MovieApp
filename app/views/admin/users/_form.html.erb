<%= form_with(model: @user, url: form_path, method: form_method, id: 'admin_user_form',  local: true) do |f| %>

  <%= image_tag url_for(@user.avatar), class: 'rounded-circle profile_picture offset-lg-4' if form_method == :patch %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email,  autocomplete: "email", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label 'Admin' %>
    <%= f.check_box :admin %>
  </div>

  <div class="form-group">
    <%= f.label 'Profile Picture' %>
    <div class='clearfix'></div>
    <%= f.file_field :avatar, class: 'form-control', accept: 'image/*' %>
  </div>

  <div class="actions">
    <%= f.submit button_text, class: 'btn btn-primary mb-3' %>
  </div>

<% end %>
