<%= form_with(model: @actor, id: 'actor_form', local: true, method: request_method) do |form| %>
  <div class='form-group'>
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= form.label :picture %>
    <%= form.file_field :picture, class: 'form-control', accept: 'image/*' %>
  </div>
  <%= form.submit submit_button_text, class: 'btn btn-primary mb-3' %>
<% end %>
