<%= form_with(model: @actor, local: true, method: request_method) do |form| %>
  <% if @actor.present? && @actor.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(@actor.errors.count, "error") %> prohibited this actor from being saved:</h3>
        <ul>
          <% @actor.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
    </div>
  <% end %>

  <div class='form-group'>
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= form.label :picture %>
    <%= form.file_field :picture, class: 'form-control' %>
  </div>
  <%= form.submit submit_button_text, class: 'btn btn-primary' %>
<% end %>
