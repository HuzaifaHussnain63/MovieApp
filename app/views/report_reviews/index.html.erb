<div class='row border mt-3'>
  <div class='col-lg-12 pt-3'>

    <% if @reported_reviews.any? %>
      <h2 class='pl-3'>Reported Reviews<%= link_to 'Ignore All complaints', delete_all_complaints_path, class: 'btn btn-primary pull-right mr-3', method: :delete, data: { confirm: 'Are you sure you want to delete all complaints?' } %></h2>
      <% @reported_reviews.each do |reported| %>
        <div class="card m-3">
          <div class="card-header">
            <%= reported.review.user.name %>

            <% reported.review.rating.times do |star| %>
              <span class="fa fa-star golden-star"></span>
            <% end %>

            <% (5 - reported.review.rating).times do |star| %>
              <span class="fa fa-star"></span>
            <% end %>
            <span class='font-italic text-muted pl-3'>reported by</span>
            <%= reported.user.name %>

            <div class="dropdown pull-right">
              <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Actions
              </button>
              <div class="dropdown-menu m-1 review-action" aria-labelledby="dropdownMenuButton">
                <%= link_to 'Delete Complaint', delete_complaint_path(reported.review_id), method: :delete, data: { confirm: 'Are you sure you want to delete this complaint?' } %>
                <%= link_to 'Delete Review', movie_review_path(reported.review.movie_id, reported.review_id), method: :delete, data: { confirm: 'Are you sure you want to delete this review?' } %>
              </div>
            </div>
          </div>

          <% if reported.review.comment != '' %>
            <div class="card-body">
              <%= reported.review.comment %>
            </div>
          <% end %>
        </div>
      <% end %>
    <% else %>
    <h2 class='pl-3'>Reported Reviews </h2>
      <h6 class='pl-3 pt-3'>No Reported reviews yet.</h6>
    <% end %>
  </div>
</div>
