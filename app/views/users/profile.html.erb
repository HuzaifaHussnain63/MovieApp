<div class='row border mt-3'>
  <div class='col-lg-12 p-0'>
    <div class='card border-0'>
      <div class='card-header m-0'>
        <%= image_tag url_for(@user.avatar), class: 'pull-left rounded-circle user-profile' %>
      </div>
      <div class='card-body'>
        <h3><%= @user.name %></h3>
        <h6><%= @user.email %></h6>
        <% if user_signed_in? && current_user.id == @user.id %>
          <%= link_to 'Edit Profile', edit_user_registration_path, class: 'btn btn-primary' %>
        <% elsif current_user.admin %>
          <%= link_to 'Edit Profile', edit_admin_user_path(@user.id), class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<% if @favourite_movies && @favourite_movies.any? %>
  <div class='row border mt-3'>
    <div class='col-lg-12 p-0'>
      <div class='card border-0'>
        <div class='card-header'>
          <h3>Favourite Movies</h3>
        </div>
        <div class='card-body p-0'>
          <%= render partial: 'movie_listing', locals: { favourites: @favourite_movies } %>
        </div>
      </div>
    </div>
  </div>
<% end %>
